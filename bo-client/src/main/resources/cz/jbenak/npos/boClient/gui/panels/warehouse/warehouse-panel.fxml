<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXTableView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="mainPane" prefHeight="768.0" prefWidth="1024.0" styleClass="panel" stylesheets="@../../styles/panels.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.jbenak.npos.boClient.gui.panels.warehouse.WarehousePanelController">
   <top>
      <BorderPane fx:id="menuPane" prefHeight="100.0" prefWidth="1014.0" BorderPane.alignment="CENTER">
         <top>
            <HBox alignment="CENTER_LEFT" prefHeight="4.0" prefWidth="1014.0" styleClass="panel-main-menu" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnMenuItems" mnemonicParsing="false" onAction="#setItemsPane" text="Sortiment">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnMenuItemGroups" mnemonicParsing="false" onAction="#setItemGroupsPane" text="Skupiny sortimentu">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnMenuStockReceipts" mnemonicParsing="false" onAction="#setStockReceiptsPane" text="Příjemky">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnMenuStockDispenses" mnemonicParsing="false" onAction="#setStockDispensesPane" text="Výdejky">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnMenuStockTaking" mnemonicParsing="false" onAction="#setStockTakingPane" text="Inventury">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnMenuViews" mnemonicParsing="false" onAction="#setViewPane" text="Přehledy">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <BorderPane.margin>
                  <Insets bottom="10.0" />
               </BorderPane.margin>
            </HBox>
         </top>
         <center>
            <fx:include source="items-menu.fxml" />
         </center>
      </BorderPane>
   </top>
   <padding>
      <Insets bottom="10.0" right="10.0" top="10.0" />
   </padding>
   <center>
      <MFXTableView prefHeight="99999.0" prefWidth="99999.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin>
      </MFXTableView>
   </center>
</BorderPane>
